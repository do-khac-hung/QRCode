<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="STT"
        android:layout_weight="1"
        android:id="@+id/table_item_index"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mã Vật Tư"
        android:layout_weight="2"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/table_item_id_item"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mã Vị Trí"
        android:layout_weight="2"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/table_item_id_location"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mô Tả"
        android:layout_weight="2"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/table_item_description"
        android:textSize="13sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Đơn Vị"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:id="@+id/table_item_unit"
        android:textSize="13sp"/>
</LinearLayout>