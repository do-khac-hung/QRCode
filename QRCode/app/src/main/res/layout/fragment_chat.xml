<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ChatFragment"
    android:padding="@dimen/activity_horizontal_margin">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chat_rc"
        android:layout_above="@id/chat_control_layout"/>

    <LinearLayout
        android:id="@+id/chat_control_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageButton
            android:id="@+id/attachment_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/ic_attachment"
            android:backgroundTint="#0084ff" />

        <EditText
            android:id="@+id/message_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/icons_sent"
            android:enabled="true" />
    </LinearLayout>

</RelativeLayout>